<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.BorrarCursoActivity">

    <TextView
        android:id="@+id/txt_borrar_provincia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="borrar curso"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/sp_borrar_curso"
        android:layout_width="255dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_borrar_provincia"
        app:layout_constraintStart_toStartOf="@+id/txt_borrar_provincia"
        app:layout_constraintTop_toBottomOf="@+id/txt_borrar_provincia"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/bt_borrarp"
        android:layout_width="233dp"
        android:layout_height="55dp"
        android:layout_marginTop="88dp"
        android:onClick="borrarCurso"
        android:text="Borrar curso"
        app:layout_constraintEnd_toEndOf="@+id/sp_borrar_curso"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="@+id/sp_borrar_curso"
        app:layout_constraintTop_toBottomOf="@+id/sp_borrar_curso" />

</androidx.constraintlayout.widget.ConstraintLayout>