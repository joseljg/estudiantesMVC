<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Actualizar_Curso_Activity1">

    <Spinner
        android:id="@+id/sp_actualizarc"
        android:layout_width="255dp"
        android:layout_height="80dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_actualizar_curso1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_actualizar_curso1"
        app:layout_constraintTop_toBottomOf="@+id/txt_actualizar_curso1"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txt_actualizar_curso1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="actualizar curso"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_siguiente_actualizarc"
        android:layout_width="233dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="84dp"
        android:onClick="siguienteactualizarcurso"
        android:text="siguiente"
        app:layout_constraintStart_toStartOf="@+id/sp_actualizarc"
        app:layout_constraintTop_toBottomOf="@+id/sp_actualizarc" />

</androidx.constraintlayout.widget.ConstraintLayout>